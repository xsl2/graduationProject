<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SchoolHelper" parent="Theme.Material3.DayNight.NoActionBar">

        <!--    状态栏颜色-->
        <item name="android:statusBarColor">@color/white</item>
        <!--    白天模式主题背景-->
        <item name="android:colorBackground">@color/white</item>
        <!--文字默认主题色调-->
        <item name="colorOnSurface">@color/black40</item>
        <!--按钮默认主色调-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorLightWhite">@color/white</item>
        <!-- 分割线颜色 -->
        <item name="colorDivider">@color/black183</item>

    </style>

    <!--region 按钮-->
    <!--按钮-->
    <style name="SuperButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/super_button_height</item>
    </style>

    <!--主色调按钮-->
    <style name="SuperButton.Primary">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--endregion-->

    <style name="Theme.SchoolHelper" parent="Base.Theme.SchoolHelper" />
</resources>